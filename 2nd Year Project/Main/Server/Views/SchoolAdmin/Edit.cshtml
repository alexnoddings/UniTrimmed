@using EduLocate.Core
@model EduLocate.Core.School

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>School</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="IsOpen" class="control-label"></label>
                <input asp-for="IsOpen" class="form-control" />
                <span asp-validation-for="IsOpen" class="text-danger"></span>
