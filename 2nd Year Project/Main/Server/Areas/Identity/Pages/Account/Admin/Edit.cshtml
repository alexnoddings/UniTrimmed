@page
@model EditModel
@{
    ViewData["Title"] = "Profile";
}

<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-6">
        <a class="btn btn-outline-primary" asp-area="Identity" asp-page="/Account/Admin/Index">Back</a>
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="Input.IsDataManager"></label>
                @Html.CheckBoxFor(em => em.Input.IsDataManager)
                <label asp-for="Input.IsUserManager"></label>
                @Html.CheckBoxFor(em => em.Input.IsUserManager)
            </div>
            <button type="submit" class="btn btn-outline-primary m-2" asp-route-id="@Model.Id">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}